<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ui.userexc.excerciseDetail.UserExcDetailFragment">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_margin="18dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Excercise Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:padding="10dp"
        android:background="@drawable/rounded_bkg"
        android:hint="Excercise Name"
        android:layout_margin="12dp"
        android:id="@+id/excName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/sessionTitle"
        android:layout_margin="18dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Session"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Spinner
        android:id="@+id/sessionSpinner"
        android:padding="10dp"
        android:layout_margin="12dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_margin="18dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Number of Turns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:padding="10dp"
        android:background="@drawable/rounded_bkg"
        android:hint="Number of Turns"
        android:inputType="numberSigned"
        android:layout_margin="12dp"
        android:id="@+id/noTurn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_margin="18dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Number of Seconds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:padding="10dp"
        android:background="@drawable/rounded_bkg"
        android:hint="Number of Seconds"
        android:inputType="numberSigned"
        android:layout_margin="12dp"
        android:id="@+id/noSec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_margin="18dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Gap Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:padding="10dp"
        android:background="@drawable/rounded_bkg"
        android:hint="Gap time"
        android:inputType="numberSigned"
        android:layout_margin="12dp"
        android:id="@+id/noGap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.google.android.material.chip.Chip
        android:text="View Detail"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:id="@+id/viewExcDetailBtn"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
</LinearLayout>


</ScrollView>