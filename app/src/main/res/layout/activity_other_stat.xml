<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.statistic.otherstat.OtherStatActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Chỉ số cơ thể: "
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/statSpinner"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </LinearLayout>
    <com.google.android.material.chip.Chip
        android:id="@+id/viewReport"
        android:enabled="false"
        android:layout_gravity="center"
        android:textAlignment="center"
        app:chipBackgroundColor="@color/desgin_tomator_sec"
        android:textSize="20sp"
        android:text="Xem báo cáo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bodyRecyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/other_stat_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:src="@drawable/ic_baseline_add_24"
            android:layout_margin="16dp" />
        <ProgressBar
            android:id="@+id/other_stat_progress"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>