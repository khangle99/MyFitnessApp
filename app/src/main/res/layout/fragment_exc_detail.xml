<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.excercise.excdetail.ExcDetailFragment">
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="10dp"
            android:textSize="24sp"
            android:text="Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Name"
            android:id="@+id/titleTV"
            android:layout_margin="10dp"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="10dp"
            android:textSize="24sp"
            android:text="Difficulty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Do kho"
            android:textSize="18sp"
            android:id="@+id/difficultyTv"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="10dp"
            android:textSize="24sp"
            android:text="Equipment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/equipmentTv"
            android:text="Yeu cau"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_margin="10dp"
            android:textSize="24sp"
            android:text="Tutorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tutorialTV"
            android:text="Steps"
            android:minLines="3"
            android:inputType="textMultiLine"
            android:layout_margin="10dp"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/viewStepBtn"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:text="View Steps"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/addFavourite"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:text="Add to Favourite"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>