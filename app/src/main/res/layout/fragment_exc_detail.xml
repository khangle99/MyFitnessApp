<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.excercise.excdetail.ExcDetailFragment">
    <LinearLayout
        android:id="@+id/container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Name"
            android:id="@+id/titleTV"
            android:fontFamily="@font/nunito_extrabold"
            android:gravity="center"
            android:layout_margin="20dp"
            android:textSize="28sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="10dp"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_margin="10dp"
                app:cardElevation="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_margin="10dp"
                        android:drawableStart="@drawable/speedometer"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="Difficulty"
                        android:drawablePadding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="Do kho"
                        android:textSize="18sp"
                        android:id="@+id/difficultyTv"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="10dp"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_margin="10dp"
                app:cardElevation="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_margin="10dp"
                        android:drawableStart="@drawable/kcal"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="Calor Factor"
                        android:drawablePadding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="Calor"
                        android:textSize="18sp"
                        android:id="@+id/caloFactor"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            app:cardElevation="10dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_margin="10dp"
                    android:drawableStart="@drawable/ic_tool"
                    android:textSize="20sp"
                    android:drawablePadding="10dp"
                    android:text="Equipment"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/equipmentTv"
                    android:text="Yeu cau"
                    android:textSize="18sp"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_margin="18dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Timing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:hint="NoTurn"
                android:layout_margin="12dp"
                android:padding="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="number"
                android:background="@drawable/rounded_bkg"
                android:id="@+id/excNoTurn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:hint="NoSec"
                android:layout_margin="12dp"
                android:padding="10dp"
                android:inputType="number"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/rounded_bkg"
                android:id="@+id/excNoSec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:hint="NoGap"
                android:layout_margin="12dp"
                android:padding="10dp"
                android:layout_weight="1"
                android:inputType="number"
                android:background="@drawable/rounded_bkg"
                android:id="@+id/excNoGap"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:layout_margin="18dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Tutorial &amp; Achievement "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/addFavourite"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:text="Add to Favourite"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>