<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/rounded_bkg_transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    tools:context=".ui.statistic.history.AddStatDialogFragment">

    <TextView
        android:text="Month Rating"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:minHeight="100dp"
        android:padding="10dp"
        tools:text="Sample"
        android:layout_margin="10dp"
        android:id="@+id/ratingReport"
        android:background="@drawable/rounded_bkg_prim_color"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.chip.Chip
            android:id="@+id/cancelRatingBtn"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:textAlignment="center"
            android:layout_height="60dp"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/addRatingBtn"
            app:chipBackgroundColor="@color/colorPrimary"
            android:layout_width="0dp"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Ok"
            android:textAlignment="center"
            android:layout_height="60dp"/>
    </LinearLayout>

</LinearLayout>