<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.userexc.excList.UserExcListFragment">
    <TextView
        android:text="Session Name"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textSize="28sp"
        android:id="@+id/sessionNameTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Time"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textSize="28sp"
        android:id="@+id/sessionTimeTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Auto Start"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <Switch
            android:id="@+id/autoplaySwitch"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_weight="1"
        android:id="@+id/userexcList"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <com.google.android.material.chip.Chip
        android:id="@+id/startWorkoutBtn"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:text="Start Workout"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_width="250dp"
        android:layout_height="80dp"/>

</LinearLayout>