<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.statistic.history.StatHistoryFragment">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="28sp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:fontFamily="@font/nunito_extrabold"
        android:textAlignment="center"
        android:text="Statistic History"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.google.android.material.chip.Chip
        android:text="More Stat"
        android:id="@+id/moreStatChip"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:backgroundTint="@color/desgin_tomator_sec"
        android:layout_width="wrap_content"
        android:layout_height="50dp"/>
</LinearLayout>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="0dp">
    <androidx.recyclerview.widget.RecyclerView
        android:background="@color/listbackground"
        android:id="@+id/statHistoryList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addStatFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_baseline_add_24"
        android:layout_margin="16dp" />
    <ProgressBar
        android:id="@+id/statHistoryProgress"
        android:layout_gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>