<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/rounded_bkg_transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.statistic.history.AddStatDialogFragment">

    <TextView
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Mục tiêu thời gian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/minutesET"
            android:inputType="number"
            android:maxLength="2"
            android:layout_weight="1"
            android:textSize="20sp"
            android:gravity="center"
            tools:text="Sample"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
           android:textSize="20sp"
            android:text="Phút"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.chip.Chip
            android:id="@+id/cancelStepGoalBtn"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Huỷ"
            android:textAlignment="center"
            android:layout_height="60dp"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/saveGoalBtn"
            app:chipBackgroundColor="@color/colorPrimary"
            android:layout_width="0dp"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Thêm"
            android:textAlignment="center"
            android:layout_height="60dp"/>
    </LinearLayout>

</LinearLayout>