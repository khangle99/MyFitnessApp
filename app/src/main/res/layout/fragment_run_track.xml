<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context=".ui.stepstrack.stephistory.StepHistoryFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.chip.Chip
                android:layout_gravity="center"
                android:id="@+id/changeTime"
                android:text="Cài đặt thời gian đếm ngược"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                app:chipIcon="@drawable/ic_baseline_star_24"
                android:layout_height="60dp"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="400dp">

                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/currentStepRunTrackIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="40dp"
                    android:layout_weight="3"
                    app:cpb_background_progressbar_color="#b6bbd8"
                    app:cpb_background_progressbar_width="24dp"
                    app:cpb_progress="0"
                    app:cpb_progress_direction="to_right"
                    app:cpb_progress_max="100"
                    app:cpb_progressbar_color="#3f51b5"
                    app:cpb_progressbar_width="20dp"
                    app:cpb_round_border="true" />
                <TextView
                    android:id="@+id/currentStepRunTV"
                    android:textSize="24sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Step Count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </FrameLayout>
           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:text="Type: "
                   android:textSize="20sp"
                   android:textStyle="bold"
                   android:layout_gravity="center"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <Spinner
                   android:id="@+id/runTypeSpinner"
                   android:layout_width="match_parent"
                   android:minHeight="80dp"
                   android:layout_height="wrap_content"/>
           </LinearLayout>
            <com.google.android.material.chip.Chip
                android:layout_gravity="center"
                android:id="@+id/playBTn"
                android:text="Bắt đầu"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="60dp"/>
        <TextView
            android:id="@+id/runCalorTV"
            tools:text="Sample"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/speedTV"
            tools:text="Sample"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.github.anastr.speedviewlib.SpeedView
            android:id="@+id/runSpeedView"
            android:layout_gravity="center"
            android:layout_width="300dp"
            app:sv_maxSpeed="50"
            app:sv_unit="m/s"
            android:layout_height="300dp"/>
        </LinearLayout>
    </ScrollView>
    <ProgressBar
        android:id="@+id/stepProgress"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

</FrameLayout>