<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context=".ui.stepstrack.stephistory.StepHistoryFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.chip.Chip
                android:layout_gravity="center"
                android:id="@+id/setDailyGoal"
                android:text="Set Daily Goal"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                app:chipIcon="@drawable/ic_baseline_star_24"
                android:layout_height="60dp"/>
            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:id="@+id/currentStepTrackIndicator"
                app:cpb_progress="0"
                app:cpb_round_border="true"
                app:cpb_progress_max="100"
                app:cpb_background_progressbar_color="#b6bbd8"
                app:cpb_background_progressbar_width="24dp"
                app:cpb_progress_direction="to_right"
                app:cpb_progressbar_color="#3f51b5"
                app:cpb_progressbar_width="20dp"
                android:layout_height="400dp"
                android:layout_margin="40dp"/>
            <TextView
                android:id="@+id/currentStepTV"
                android:textSize="24sp"
                android:gravity="center"
                android:text="sample"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="28sp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:text="Step Track By Day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/stepHistoryList"
                android:layout_margin="10dp"
                android:layout_weight="7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </ScrollView>
    <ProgressBar
        android:id="@+id/stepProgress"
        android:layout_gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

</FrameLayout>