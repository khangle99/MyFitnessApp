<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.khangle.myfitnessapp">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <application
        android:name=".MyFitnessApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyFitnessApp">
        <activity
            android:name=".ui.statistic.otherstat.report.StatReportActivity"
            android:exported="true" />
        <activity
            android:name=".ui.userexc.planlist.packagePick.ExcPackageActivity"
            android:exported="true"
            android:label="Bài tập" />
        <activity
            android:name="com.khangle.myfitnessadmin.suggestpack.planlist.SuggestActivity"
            android:exported="true"
            android:label="Gói bài tập" />
        <activity
            android:name="com.khangle.myfitnessadmin.suggestpack.plandetail.PlanDetailActivity"
            android:exported="true"
            android:label="Chi tiết gói" />
        <activity
            android:name=".ui.statistic.otherstat.OtherStatActivity"
            android:exported="true"
            android:label="Chỉ số khác" />

        <service
            android:name=".service.StepTrackUploadService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".ui.userexc.workout.WorkoutActivity" />

        <activity
            android:name=".ui.LaunchScreenActivity"
            android:noHistory="true"
            android:theme="@style/Theme.MyFitnessApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.ContainerActivity"
            android:theme="@style/Theme.MyFitnessApp.NoActionBar" />

        <provider
            android:name="androidx.work.impl.WorkManagerInitializer"
            android:authorities="${applicationId}.workmanager-init"
            tools:node="remove" />
    </application>

</manifest>